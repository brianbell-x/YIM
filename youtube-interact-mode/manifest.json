{
  "name": "YouTube Interact Mode",
  "description": "Chat with an AI referencing the YouTube video's transcript",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://api.openai.com/*"
  ]
} 