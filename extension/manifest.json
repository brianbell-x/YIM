{
  "name": "Youtube Interact Mode (Text Only)",
  "description": "Interact with YouTube transcripts via ChatGPT-style panel",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "public/popup.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": ["contentScript.js"],
      "css": []
    }
  ]
} 